    <com.prometteur.sathiya.utills.ImageScaleView
        android:id="@+id/civProfileImg"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:scaleType="matrix"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_below="@+id/tvDummy"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/shape_corner_round_square"
        app:matrixType="top_center" />
    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_below="@+id/tvDummy"
        app:srcCompat="@drawable/ic_close_white" />
<LinearLayout
    android:id="@+id/linHeaderClick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/_1sdp"
    android:layout_marginRight="@dimen/_40sdp"
    android:layout_toRightOf="@+id/civProfileImg"
    android:layout_below="@+id/tvDummy"
    android:layout_centerVertical="true">
    <com.prometteur.sathiya.utills.TextViewCustomFont
        android:id="@+id/tvProfileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <com.prometteur.sathiya.utills.TextViewCustomFont
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:layout_below="@+id/salonName"
        android:layout_centerHorizontal="true"

        />
    <com.prometteur.sathiya.utills.TextViewCustomFont
        android:id="@+id/tvMembership"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/membership_status"
        android:textColor="@color/white"
        android:layout_below="@+id/salonName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        />
</LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/RelRay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/_10sdp">

    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
        android:id="@+id/rivProfileImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/bg_pink_card"
        android:background="@drawable/bg_pink_card"
        app:siShape="@drawable/bg_pink_card"
        app:siSquare="false"
        android:scaleType="fitXY"
        />
    <!--<com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/rivProfileImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_pink_card"
        app:siRadius="@dimen/_12sdp"
        android:scaleType="fitXY"
        />-->
<!--    new added-->
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
         />



    <TextView
        android:id="@+id/tvDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:elevation="5dp"
        android:padding="10dp"
        android:background="@drawable/bg_rounds_transparent"
        />
    </FrameLayout>
   <!-- <TextView
        android:id="@+id/tvDetailTwo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/black" />
    <in.codeshuffle.typewriterview.TypeWriterView
        android:id="@+id/twvDetail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />-->
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler"
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:id="@+id/ivPlayPause"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_play_circle_white"
        />


<!--new added end-->
    <ImageView
        android:id="@+id/ivVolume"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_volume_up"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_8sdp"
        />

    <com.prometteur.sathiya.utills.TextViewCustomFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/white"
        android:background="@drawable/bg_corner_round_blackfill"
        android:drawableLeft="@drawable/ic_casedesignation_logo"
        android:drawablePadding="@dimen/_5sdp"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp"
        android:paddingTop="@dimen/_2sdp"
        android:visibility="gone"
        android:layout_margin="@dimen/_8sdp"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220sdp"
        android:layout_alignParentBottom="true"

        >
        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/rivBgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_bottom_bg"
            app:siBorderAlpha="0"
            app:siRadius="@dimen/_12sdp"
            />
        <LinearLayout
            android:id="@+id/linuserdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@+id/linBottomMenu"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.prometteur.sathiya.utills.TextViewCustomFont
                    android:id="@+id/tvProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
                <com.prometteur.sathiya.utills.TextViewCustomFont
                    android:id="@+id/tvRefNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:background="@drawable/bg_corner_round_pink"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <com.prometteur.sathiya.utills.TextViewCustomFont
                android:id="@+id/tvUserAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_5sdp"
                />
            <com.prometteur.sathiya.utills.TextViewCustomFont
                android:id="@+id/tvOccupationSal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:drawableTint="@color/white"
                android:drawableLeft="@drawable/ic_college_graduation"
                android:drawablePadding="@dimen/_5sdp"/>
            <com.prometteur.sathiya.utills.TextViewCustomFont
                android:id="@+id/tvUserAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hyderabad, India"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:drawableLeft="@drawable/ic_location"
                android:drawableTint="@color/white"
                android:drawablePadding="@dimen/_5sdp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linBottomMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/civRewind"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_refresh"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/civLike"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_home_heart"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/civCall"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_home_call"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/civMsg"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_home_message"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/civInfo"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_home_info"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_weight="1"
                />
        </LinearLayout>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/left_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/rivLayerRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_red_layer_card"
            android:background="@drawable/bg_red_layer_card"
            app:siShape="@drawable/bg_red_layer_card"
            app:siSquare="false"
            android:scaleType="centerInside"
            />


    </FrameLayout>
    <FrameLayout
        android:id="@+id/right_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/rivLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_green_layer_card"
            android:background="@drawable/bg_green_layer_card"
            app:siShape="@drawable/bg_green_layer_card"
            app:siSquare="false"
            android:scaleType="centerInside"
            />


    </FrameLayout>

</RelativeLayout>
